{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="/receitas.css" media="screen" />
    
{% endblock %}

{% block title %}
    <title>Receitas -Foodfy</title>
{% endblock %}

{% block content %}

            <div class="produtos-container">
         
                {% for item in items %}
                <div class="produtos" id="{{item.id}}">
                        <img src="{{item.image}}" alt="{{item.title}}">
                        <p>{{item.title}}</p>
                        <span>{{item.author}}</span>
                    </div>
                {% endfor %}

            </div>
           
        </section>
{% endblock %}
