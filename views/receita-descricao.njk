{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="/receitas.css" media="screen" />
    
{% endblock %}

{% block title %}
    <title>Descrição Receitas - Foodfy</title>
{% endblock %}

{% block content %}
<h1> Descrição da Receita</h1>

 <div class="produtos-container">
         
                {% for item in items %}
                    <div class="produtos" id="{{item.id}}" >
                        <img src="{{item.image}}" alt="{{item.title}}">
                        <p>{{item.title}}</p>
                        <span>{{item.author}}</span>
                    </div>
                {% endfor %}

            </div>
          
{% endblock %}
